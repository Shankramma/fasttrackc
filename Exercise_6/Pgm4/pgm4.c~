/*Read a text stored in a file. Count the number of words and lines in the file. Use functions.*/

#include<stdio.h>
#include<ctype.h>
int Word_Line_Count(char ch,FILE*fp);
int main()
{
  FILE *fp;
  char ch;
 
  fp = fopen("Sample.txt","r");
 if(fp == NULL)
 {
   printf("Could not open the file");
   return 1;
 }
   else
  {
	  ch = fgetc(fp);
	  Word_Line_Count(ch,fp);
  }
   fclose(fp);
   
   return 0;
}

int Word_Line_Count(char ch,FILE*fp)
{
   int word=0,line=0;
   while(ch!=EOF)
	{
           printf("%c",ch);
	   if(ch=='\n')
               line++;
           if(isspace(ch)||ch=='\n'||ch=='\t')
               word++;
         ch = fgetc(fp);
	}
      printf("Words in the file are:%d\n",word);
      printf("Lines in the file are:%d\n",line);
return 0;
}
